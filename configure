#!/bin/sh

# Check for C++ compiler
if command -v g++ >/dev/null 2>&1; then
    CXX=g++
    echo "C++ compiler found: $CXX"
else
    echo "Error: C++ compiler not found. Please install g++."
    exit 1
fi

# Generate Makefile
cat > Makefile <<EOF
CXX = $CXX
CXXFLAGS = -std=c++11 -Wall

all: myprogram

myprogram: main.cpp
	\$(CXX) \$(CXXFLAGS) -o myprogram main.cpp

clean:
	rm -f myprogram
EOF

echo "Makefile generated. You can now run 'make' to build the project."
